@using IranSoftjo.Core.Web.Mvc
@using IranSoftjo.Package.DataModel
@using Mehr
@model IranSoftjo.Package.DataModel.User
@{
    Entities db = new Entities();
    ViewBag.Title = "صفحه اصلی";
    ViewBag.HomeIndex = "HomeIndex";
    var lstTblManhols =
      (from n in db.TblManhols.OrderByDescending(d => d.TblManholId)
       select new { n.TblManholId, n.NoeManhol, n.CodeMakani, n.CodeGis, n.DateSabt ,n.VaziatZaheri1 }).ToList();
    ViewBag.Title = "پنل مدیریت " + Session["UserIdentity"];
    Layout = "~/Views/Shared/_AdminDashboardWithPanel.cshtml";
}
@Html.GetMessage("/Content/emsgIcon.gif")
<!-- BEGIN DASHBOARD STATS 1-->
<div class="row">
    <div class="col-lg-3 col-md-3 col-sm-6 col-xs-12">
        <div class="dashboard-stat blue">
            <div class="visual">
                <i class="fa fa-comments"></i>
            </div>
            <div class="details">
                <div class="number">
                    <span data-counter="counterup" data-value="1349">@string.Format("{0:N0}", lstTblManhols.Count()).LocalizeNumbers()</span>
                </div>
                <div class="desc"> تعداد منهولهای ثبت شده </div>
            </div>

            <a class="more" href="@Url.Action("ManholList", "Manhol")">
                نمایش لیست
                <i class="m-icon-swapright m-icon-white"></i>
            </a>
        </div>
    </div>
    <div class="col-lg-3 col-md-3 col-sm-6 col-xs-12">
        <div class="dashboard-stat red">
            <div class="visual">
                <i class="fa fa-exchange"></i>
            </div>
            <div class="details">
                <div class="number">
                    <span data-counter="counterup" data-value="12,5">
                        @{
                            var ddd = DateTime.Now.Date;
                        }
                        @lstTblManhols.Where(d => d.DateSabt > ddd).ToList().Count.LocalizeNumbers()
                    </span>
                </div>
                <div class="desc"> تعداد خرید های پرواز</div>
            </div>
            <a class="more" href="@Url.Action("ManholList", "Manhol")">
                نمایش لیست
                <i class="m-icon-swapright m-icon-white"></i>
            </a>
        </div>
    </div>
    <div class="col-lg-3 col-md-3 col-sm-6 col-xs-12">
        <div class="dashboard-stat purple">
            <div class="visual">
                <i class="fa fa-unlock"></i>
            </div>
            <div class="details">
                <div class="number">
                    <span data-counter="counterup" data-value="89">207</span>
                </div>
                <div class="desc"> تعداد خرید های هتل </div>
            </div>
            <a class="more" href="@Url.Action("ManholList", "Manhol")">
                نمایش لیست
                <i class="m-icon-swapright m-icon-white"></i>
            </a>
        </div>
    </div>
    <div class="col-lg-3 col-md-3 col-sm-6 col-xs-12">
        <div class="dashboard-stat green">
            <div class="visual">
                <i class="fa fa-lock"></i>
            </div>
            <div class="details">
                <div class="number">
                    <span data-counter="counterup" data-value="549">1</span>
                </div>
                <div class="desc"> تعداد خرید های اجاره خودرو </div>
            </div>
            <a class="more" href="@Url.Action("ManholList", "Manhol")">
                نمایش لیست
                <i class="m-icon-swapright m-icon-white"></i>
            </a>
        </div>
    </div>
 
</div>





@section scripts
{
    <!-- BEGIN PAGE LEVEL PLUGINS -->
    <script src="/PackageAdmin/global/plugins/jquery-knob/js/jquery.knob.js" type="text/javascript"></script>
    <!-- END PAGE LEVEL PLUGINS -->
    <!-- BEGIN PAGE LEVEL SCRIPTS -->
