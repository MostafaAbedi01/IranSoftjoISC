@model IEnumerable<IranSoftjo.Package.WebUi.ViewModels.AdvertisementVM>
@{
    ViewBag.Title = "تبلیغات";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<div class="k-rtl">
    @(Html.Kendo().Grid(Model)
          .Name("Grid")
          .Columns(columns =>
                   {
                       columns.Bound(model => model.AdvertisementGroup).Visible(false).Width(60);
                       columns.Bound(model => model.AdvertisementGroupTitle).Width(150);
                       columns.Bound(model => model.AdvertisementTitle).Width(150);
                       columns.Bound(model => model.AdvertisementUrl).Width(150);
                       columns.Bound(item => @item.AdvertisementID).Title("دستورات").Filterable(false).Groupable(false)
                           .Template(
                               @<text>
                                    @Html.ActionLink("ویرایش", "Edit", new {id = @item.AdvertisementID}, new {@class = "k-button k-button-icontext k-grid-edit"})
                                    @Html.ActionLink("حذف", "Delete", new {id = @item.AdvertisementID}, new {@class = "k-button k-button-icontext k-grid-delete"})
                                </text>
                           ).Width(140);
                   })
          .ToolBar(toolbar => toolbar.Custom().Action("Create", "Advertisement").Text("افزودن"))
          .Sortable()
          .Scrollable()
          .Filterable()
          .HtmlAttributes(new {style = "height:500px;"})
          .DataSource(dataSource => dataSource
              .Server()
              .Model(model => model.Id(item => item.AdvertisementID))
                .Group(groups => groups.Add(p => p.AdvertisementGroupTitle))
          )
          )
</div>