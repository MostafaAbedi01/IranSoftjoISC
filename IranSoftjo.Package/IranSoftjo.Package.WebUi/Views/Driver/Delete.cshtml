@using IranSoftjo.Core.Web.Mvc.Html
@model IranSoftjo.Package.WebUi.ViewModels.DriverVm
@{
    ViewBag.Title = "حذف راننده";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<div class="BreadCrumbPage">
    @Html.ActionLink("لیست راننده", "Index")
    <strong>>></strong>
    @Html.ActionLink("حذف راننده ", "Create")
</div>
<hgroup class="title">
    <h1>@ViewBag.Title</h1>
    <hr />
</hgroup>
@using (Html.BeginForm())
{
    <table class="form">
        
        @Html.AntiForgeryToken()
        @Html.HiddenFor(model => model.DriverID)
        @Html.EnhancedLabelField(model => model.Code)
        @Html.EnhancedLabelField(model => model.FirstName)
        @Html.EnhancedLabelField(model => model.LastName)
        @Html.EnhancedLabelField(model => model.Mobile)
        @Html.EnhancedLabelField(model => model.Phone)
        @Html.EnhancedLabelField(model => model.Car)
        @Html.EnhancedLabelField(model => model.Commnet, new { style = "height:100px;width:900px" })
        @Html.EnhancedSubmit("حذف")
    </table>
}
