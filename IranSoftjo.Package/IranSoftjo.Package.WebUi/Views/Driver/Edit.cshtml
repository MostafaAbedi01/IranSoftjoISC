@using IranSoftjo.Core.Web.Mvc.Html
@model  IranSoftjo.Package.WebUi.ViewModels.DriverVm
    @{
        ViewBag.Title = "ویرایش راننده";
        Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    }
<div class="BreadCrumbPage">
    @Html.ActionLink("لیست راننده", "Index")
    <strong>>></strong>
    @Html.ActionLink("ویرایش راننده ", "Create")
</div>
<hgroup class="title">
    <h1>@ViewBag.Title</h1>
    <hr />
</hgroup>
    @using (Html.BeginForm())
    {
        <table class="form">
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true)
            @Html.HiddenFor(model => model.DriverID)
            @Html.EnhancedEditorField(model => model.Code)
            @Html.EnhancedEditorField(model => model.FirstName)
            @Html.EnhancedEditorField(model => model.LastName)
            @Html.EnhancedEditorField(model => model.Mobile)
            @Html.EnhancedEditorField(model => model.Phone)
            @Html.EnhancedEditorField(model => model.Car)
            @Html.EnhancedTextAreaField(model => model.Commnet, new { style = "height:100px;width:900px" })
            @Html.EnhancedSubmit("ویرایش")
        </table>
    }
    <div>
        @Html.ActionLink("بازگشت به لیست", "Index")
    </div>
