@using IranSoftjo.Core.Web.Mvc.Html
@model  IranSoftjo.Package.WebUi.ViewModels.PhoneBookVM
@{
    ViewBag.Title = "ویرایش";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

@using (Html.BeginForm())
{
    <table class="form">
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.PhoneBookID)
        @Html.EnhancedDropDownList(model => model.PhoneBookGroupID, "PhoneBookGroupID")
        @Html.EnhancedEditorField(model => model.Title)
        @Html.EnhancedEditorField(model => model.Email)
        @Html.EnhancedEditorField(model => model.Mobile)
        @Html.EnhancedEditorField(model => model.PhoneNumber)
        @Html.EnhancedEditorField(model => model.Fax)
        @Html.EnhancedEditorField(model => model.Site)
        @Html.EnhancedTextAreaField(model => model.Comment, new { style = "height:100px;width:800px" })
        @Html.EnhancedSubmit("ویرایش")
    </table>
}
<div>
    @Html.ActionLink("بازگشت به لیست", "Index")
</div>
