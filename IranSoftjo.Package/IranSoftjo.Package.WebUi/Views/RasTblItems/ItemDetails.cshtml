@model IranSoftjo.Package.WebUi.ViewModels.TblItemVm
@using IranSoftjo.Core.Web.Mvc.Html
@using IranSoftjo.Package.WebUi.Configs
@{
    ViewBag.Title = "جزئیات جبهه کاری";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<hgroup class="title">
    <h1>@ViewBag.Title</h1>
    <hr />
</hgroup>
<div style="box-shadow: 0 1px 2px rgba(0, 0, 0, 0.5); height: auto; padding: 10px">
    <div style="float: right; margin: 10px; width: 40%">
        <a href="@Model.ImageUrl">
            <div>
                <img width="@PackageSettings.Active.PageThumbnailImageUrlWidth" height="@PackageSettings.Active.PageThumbnailImageUrlHeight" src="@Model.ThumbnailImageUrl" alt="عکس پل" title="عکس پل" />
            </div>
            <div style="float: right; margin-top: 0px;">
                بزرگنمایی عکس آیتم
            </div>
        </a>
    </div>
    <div style="float: left; margin: 10px;">
        <a href="/RasTblItems/SearchByItemId/@Model.TblItemId">
            <div>
                <img style="float: left;" width="60%" height="60%" src="/Package/Manhol/Photo/GPS.png" alt="@Model.TblItemId" title="@Model.TblItemId" />
            </div>
            <div style="float: left; margin-top: 0px;">
                نمایش موقعیت روی نقشه
            </div>
        </a>
    </div>
    <tr>
        <td>
            <hr />
            <label style="color: red" class="fieldLabel">مشخصات مکانی </label>
            <hr />
        </td>
        <td>
            <hr />
        </td>
    </tr>

    @Html.EnhancedLabelField(model => model.ItemCode)
    @Html.EnhancedLabelField(model => model.Title)
    @Html.EnhancedLabelField(model => model.Latitude)
    @Html.EnhancedLabelField(model => model.Longitude)
    @Html.EnhancedLabelField(model => model.Address)
    @Html.EnhancedLabelField(model => model.Comment)
    

</div>
<div>
    @Html.ActionLink("بازگشت به لیست", "ItemList",new{id = Model.TblProjectId})
</div>