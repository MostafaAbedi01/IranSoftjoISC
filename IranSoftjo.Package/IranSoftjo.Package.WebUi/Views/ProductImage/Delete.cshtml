@using IranSoftjo.Core.Web.Mvc.Html
@model IranSoftjo.Package.WebUi.ViewModels.ProductImageVM
@{
    ViewBag.Title = "حذف تصویر محصول";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<table class="form">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @Html.EnhancedLabelField(model => model.ProductID)
        @Html.EnhancedLabelField(model => model.ProductImageTitle)
        <td class="labelWrp">
            <label for="ProductGroupID" class="fieldLabel">@Html.LabelFor(model => model.ProductImageUrl)</label>
        </td>
        <td colspan="1" class="inputWrp">
            <img style="width: 100px;" src="@Model.ProductThumbnailImageUrl"/>
        </td>
        @Html.EnhancedSubmit("حذف")
    }
</table>
@Html.ActionLink("بازگشت به لیست", "Index")