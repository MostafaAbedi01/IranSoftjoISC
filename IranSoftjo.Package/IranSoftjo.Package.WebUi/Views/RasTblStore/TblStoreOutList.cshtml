@using Mehr
@model IEnumerable<IranSoftjo.Package.WebUi.ViewModels.TblStoreVm>
@{
    ViewBag.Title = "لیست  خروجی انبار ";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<hgroup class="title">
    <h1>@ViewBag.Title</h1>
    <hr />
</hgroup>
<div class="k-rtl">
    @(Html.Kendo().Grid(Model)
          .Name("Grid")
          .Columns(columns =>
          {
            @*columns.Bound(item => @item.TblProjectId).Title("لیست").Filterable(false).Groupable(false)
                  .Template(@<text>
                    @Html.ActionLink("جزئیات خروج از انبار", "TblStoreList", "RasTblStore", new { id = @item.TblProjectId }, new { @class = "k-button k-button-icontext k-grid-delete" })
                </text>);*@
              columns.Bound(model => model.TblAndroidLevelId).Visible(false);
              // columns.ForeignKey(p => p.KeyID1, (System.Collections.IEnumerable)ViewBag.TblKeyValueID, "KeyID", "Title");
              columns.Bound(model => model.ProductGroupTitle).Width(120); ;
              columns.Bound(model => model.ProductTitle).Width(300);
              columns.Bound(model => model.Count).FooterTemplate(@<text>جمع:@string.Format("{0:#,0.00}", Model.Sum(d => d.Count)).LocalizeNumbers()</text>);
              columns.Bound(model => model.Ral);
              columns.Bound(model => model.DateSabt).Format("{0:yyyy/MM/dd HH:mm}").Width(130);
              columns.ForeignKey(p => p.UserID, (System.Collections.IEnumerable)ViewBag.UserID, "UserID", "LastName").Width(80);
          })
                                                                                                    .Pageable(d => d.PageSizes(true).Refresh(true))
                                                                                                    .Sortable()
                                                                                                    .Scrollable()
                                                                                                    .Filterable().Groupable()
                                                                                                    .HtmlAttributes(new { style = "height:600px; " })
                                                                                                    .DataSource(dataSource => dataSource
                                                                                                        .Server()
                                                                                                        .Model(model => model.Id(item => item.TblProjectId)).PageSize(10)
                                                                                                    )
                                                                                                    .Resizable(resize => resize.Columns(true))
                                                                                                    .ColumnMenu()
)
</div>

<style>
    .container {
        width: 1300px !important;
    }
    .pageContentRightDiv {
        height: 700px;;
    }
</style>