<body class=" login">
    <!-- BEGIN LOGO -->
    <div class="logo">
        <a href="/">
            <img src="/Images/TopLogo.png" alt="لوگو" />
        </a>
    </div>
    <!-- END LOGO -->
    <!-- BEGIN LOGIN -->
    <div class="content">
        <!-- BEGIN LOGIN FORM -->
        @Html.GetMessage("/Content/emsgIcon.gif")
        @using (Html.BeginForm("Login", "Account", new { ReturnUrl = Session["ReturnUrl"] }, FormMethod.Post, new { role = "form" }))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <h3 class="form-title">ورود به سامانه هوشمند SIC</h3> <hr />
            <p>نظارت آنلاین بر بازرسی شبکه آب و فاضلاب</p>

            <div class="form-group">
                <!--ie8, ie9 does not support html5 placeholder, so we just show field title for that-->
                <label class="control-label visible-ie8 visible-ie9">نام کاربری</label>
                <div class="input-icon">
                    <i class="fa fa-user"></i>
                    @Html.TextBoxFor(m => m.Username, new { @class = "form-control placeholder-no-fix", @placeholder = "نام کاربری" })
                    @Html.ValidationMessageFor(m => m.Username, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <label class="control-label visible-ie8 visible-ie9">رمز عبور</label>
                <div class="input-icon">
                    <i class="fa fa-lock"></i>
                    @Html.PasswordFor(m => m.Password, new { @class = "form-control placeholder-no-fix" , @placeholder = "رمز عبور" })
                    @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-actions">
                <label class="checkbox">
                    <input type="checkbox" name="remember" value="1" /> بخاطر بسپار
                </label>
                <button type="submit" class="btn green pull-right"> ورود به سامانه   <i class="m-icon-swapright m-icon-white"></i>  </button>
            </div>
            <div class="forget-password">
                <h4>اگر رمز عبور خود را فراموش کردید؟</h4>
                <p>
                    جهت بازنشانی رمزعبور خود
                    <a href="javascript:;" id="forget-password"> اینجا </a> کلیک کنید.
                </p>
            </div>
        }
        <!-- END LOGIN FORM -->
        <!-- BEGIN FORGOT PASSWORD FORM -->
        <form class="forget-form" action="index.html" method="post">
            <h3>بازنشانی رمز عبور </h3>
            <p> جهت بازنشانی رمز عبور پست الکترونیکی خود را وارد نمایید </p>
            <div class="form-group">
                <div class="input-icon">
                    <i class="fa fa-envelope"></i>
                    <input class="form-control placeholder-no-fix" type="text" autocomplete="off" placeholder="پست الکترونیکی" name="email" />
                </div>
            </div>
            <div class="form-actions">
                <button type="button" id="back-btn" class="btn red btn-outline">برگشت </button>
                <button type="submit" class="btn green pull-right"> درخواست بازنشانی رمزعبور </button>
            </div>
        </form>
        <!-- END FORGOT PASSWORD FORM -->

    </div>
    <!-- END LOGIN -->
