@model IEnumerable<IranSoftjo.Package.WebUi.ViewModels.GalleryVM>
@{
    ViewBag.Title = "گروه گالری";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<div class="k-rtl">
    @(Html.Kendo().Grid(Model)
              .Name("Grid")
              .Columns(columns =>
                  {
                      columns.Bound(model => model.GalleryId).Visible(false);
                      columns.Bound(model => model.GalleryGroupTitle).Width(100);
                      columns.Bound(model => model.GalleryOrder);
                      columns.Bound(model => model.Title);
                      columns.Bound(item => item.GalleryImageUrlThumb).Width(100)
                          .Template(@<div style="text-align: center;">
                              <img style=" width: 50px;height: 50px" src="@item.GalleryImageUrlThumb" title="@item.GalleryImageUrlThumb"/>
                          </div>);
                      columns.Bound(item => @item.GalleryId).Title("دستورات").Filterable(false).Groupable(false)
                              .Template(@<text>
    @Html.ActionLink("ویرایش", "Edit", new { id = @item.GalleryId }, new { @class = "k-button k-button-icontext k-grid-Edit" })
    @Html.ActionLink("حذف", "Delete", new { id = @item.GalleryId }, new { @class = "k-button k-button-icontext k-grid-Delete" })
    </text>).Width(200);

                  })
        .ToolBar(toolbar => toolbar.Custom().Action("Create", "Gallery").Text("افزودن"))
        .Groupable()
        .Pageable()
        .Sortable()
        .Scrollable()
        .Filterable()
                .HtmlAttributes(new { style = "height:500px;" })
        .DataSource(dataSource => dataSource
                                    .Server()
                                    .Model(model => model.Id(item => item.GalleryId))
                                    .Group(groups => groups.Add(p => p.GalleryGroupTitle))
                    )
    )
</div>
